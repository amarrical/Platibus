<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging" />
    </sectionGroup>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog" />
    <section name="pluribus" type="Pluribus.Config.PluribusConfigurationSection, Pluribus" />
  </configSections>

  <common>
    <logging>
      <factoryAdapter type="Common.Logging.NLog.NLogLoggerFactoryAdapter, Common.Logging.NLog31">
        <arg key="configType" value="INLINE" />
      </factoryAdapter>
    </logging>
  </common>

  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="console" xsi:type="Console" layout="${date:format=yyyy-MM-dd HH\:MM\:ss} ${logger} [${threadid}] ${message} ${exception:format=tostring}" />
      <target name="file" xsi:type="File" layout="${date:format=yyyy-MM-dd HH\:MM\:ss} ${logger} [${threadid}] ${message} ${exception:format=tostring}" fileName="${basedir}/logs/Pluribus.log" deleteOldFileOnStartup="true" createDirs="true" />
    </targets>
    <rules>
      <logger name="*" minlevel="Debug" writeTo="console,file" />
    </rules>
  </nlog>

  <pluribus baseUri="http://localhost:52180/pluribus/">
    <timeouts replyTimeout="00:05:00" />
    <queueing provider="Filesystem" path="pluribus\queues" />
    <subscriptionTracking provider="Filesystem" path="pluribus\subscriptions" />
    <endpoints>
      <add name="example" address="http://example.com/pluribus/" />
    </endpoints>
    <sendRules>
      <add namePattern=".*example.*" endpoint="example" />
    </sendRules>
    <subscriptions>
      <add endpoint="example" topic="topic-1" />
    </subscriptions>
  </pluribus>
  
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
        <assemblyIdentity name="Common.Logging" publicKeyToken="af08829b84f0328e" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.0.0.0" newVersion="3.0.0.0" />
      </dependentAssembly>
      <dependentAssembly>
        <assemblyIdentity name="NLog" publicKeyToken="5120e14c03d0593c" culture="neutral" />
        <bindingRedirect oldVersion="0.0.0.0-3.2.0.0" newVersion="3.2.0.0" />
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
</configuration>
