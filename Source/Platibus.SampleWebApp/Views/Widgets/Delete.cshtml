@model Platibus.SampleMessages.Widgets.WidgetResource

@{
    ViewBag.Title = "Platibus Sample Web App - Delete Widget";
}

<h4>Delete Widget #@Model.Id</h4>
<hr />

<div class="alert alert-warning" role="alert">
    Are you sure you want to delete this widget?
</div>

<div>
    
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Attributes.PartNumber)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Attributes.PartNumber)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Attributes.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Attributes.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Attributes.Length)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Attributes.Length) cm
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Attributes.Width)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Attributes.Width) cm
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Attributes.Height)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Attributes.Height) cm
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-warning" />
        @Html.ActionLink("Cancel", "Index", null, new {@class = "btn btn-default"})
    }
</div>
