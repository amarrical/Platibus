@model Platibus.Journaling.MessageJournalEntry

@{
    ViewBag.Title = "Platibus Sample Web App - Journal Entry Details";
}

<style>
    .dl-wide dt {
        white-space: normal;
        width: 300px;
    }

    .dl-wide dd {
        margin-left: 320px;
    }
</style>

<h4>Journal Entry Metadata</h4>
<hr />
<dl class="dl-horizontal dl-wide">
    <dt>
        @Html.DisplayNameFor(model => model.Position)
    </dt>
    <dd>
        @Model.Position
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Timestamp)
    </dt>
    <dd>
        @Model.Timestamp.ToString("O")
    </dd>
    <dt>
        @Html.DisplayNameFor(model => model.Category)
    </dt>
    <dd>
        @Model.Category
    </dd>
</dl>

<h4>Message Headers</h4>
<hr />
<dl class="dl-horizontal dl-wide">
    @foreach (var messageHeader in Model.Data.Headers)
    {
        <dt>
            @messageHeader.Key
        </dt>
        <dd>
            @messageHeader.Value
        </dd>
    }
</dl>

<h4>Message Content</h4>
<pre>@Model.Data.Content</pre>

@Html.ActionLink("Back", "Index", null, new { @class = "btn btn-default" })